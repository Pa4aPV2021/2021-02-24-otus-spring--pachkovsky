<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="csvReaderBean"
		class="ru.otus.spring.service.CsvReaderImpl">
		<property name="defaultCsvResourcePath" value = "questions.csv"></property>
	</bean>

	<bean id="questionServiceBean"
		class="ru.otus.spring.service.QuestionServiceImpl">
		<constructor-arg name="csvReader" ref="csvReaderBean" />
	</bean>

</beans>